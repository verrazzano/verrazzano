pipeline {
    options {
        skipDefaultCheckout true
        timestamps ()
    }

    agent {
        docker {
            image "${RUNNER_DOCKER_IMAGE}"
            args "${RUNNER_DOCKER_ARGS}"
            registryUrl "${RUNNER_DOCKER_REGISTRY_URL}"
            label 'internal'
        }
    }

    parameters {
        string (name: 'RPT_BRANCH_NAME', defaultValue: 'NONE', description: 'Which branch to upload the scan report for')
        string (name: 'RPT_BUILD_NUMBER', defaultValue: 'NONE', description: 'Build number where upload file was generated')
    }

    environment {
        upload_file_name="consolidated-upload.json"
        artifact_path="https://build.verrazzano.io/job/ocir-scan-results/job/${RPT_BRANCH_NAME}/${RPT_BUILD_NUMBER}/artifact/scan-results/latest-periodic/${upload_file_name}"

        OCI_CLI_REGION = "us-ashburn-1"
        OCI_CLI_AUTH="api_key"
        OCI_CLI_TENANCY = credentials('oci-dev-tenancy')
        OCI_CLI_USER = credentials('oci-dev-user-ocid')
        OCI_CLI_FINGERPRINT = credentials('oci-dev-api-key-fingerprint')
        OCI_CLI_KEY_FILE = credentials('oci-dev-api-key-file')
    }

    stages {
        stage('Fetch Scan Report') {
            steps {
                sh """
                    echo "RPT_BUILD_BRANCH = ${RPT_BUILD_BRANCH}"
                    echo "RPT_BUILD_NUMBER = ${RPT_BUILD_NUMBER}"
                """
                copyArtifacts(
                    projectName: 'ocir-scan-results/${RPT_BUILD_BRANCH}',   // the name of project, as you find it from the root of jenkins
                    selector: specific(${RPT_BUILD_NUMBER}),                // selector to select the build to copy from. If not specified, latest stable build is used.
                    filter: '**/consolidated.csv',                  // ant-expression to filter artifacts to copy, Attention! Filter is case sensitive
                    flatten: true,                          // ignore directory structures of artifacts, Artifact will be placed at 'sources/deploy/myzip.zip'. Is the option false, you find it at 'projects/Outpu/myzip.py'
                    optional: false,                        // do not fail the step even if no appropriate build is found.
                    fingerprintArtifacts: true,             // fingerprint artifacts to track builds using those artifacts
                )
                sh """
                    echo "ls -l"
                    ls -l
                """
            }
        }

        stage("Upload Scan Report") {
            steps {
                script{
                    sh """
                    echo curl -k -v -X POST -H "Content-Type: application/json" -d@${upload_file_name} https://vzship-scanmanager.appoci.oraclecorp.com/scanreports
                    """
                }
            }
        }

    }

    post {
        cleanup {
            sh """
                rm -f ${upload_file_name}
            """
        }
    }
}

