pipeline {
    options {
        skipDefaultCheckout true
        timestamps ()
    }

    agent {
        docker {
            image "${RUNNER_DOCKER_IMAGE}"
            args "${RUNNER_DOCKER_ARGS}"
            registryUrl "${RUNNER_DOCKER_REGISTRY_URL}"
            label 'internal'
        }
    }

    parameters {
        string (name: 'RPT_BRANCH_NAME', defaultValue: 'NONE', description: 'Which branch to upload the scan report for')
        string (name: 'RPT_BUILD_NUMBER', defaultValue: 'NONE', description: 'Build number where upload file was generated')
    }

    environment {
        upstream_project="test-multi-pipeline"
        upload_filename="foobar.txt"

        // OCI_CLI_REGION = "us-ashburn-1"
        // OCI_CLI_AUTH="api_key"
        // OCI_CLI_TENANCY = credentials('oci-dev-tenancy')
        // OCI_CLI_USER = credentials('oci-dev-user-ocid')
        // OCI_CLI_FINGERPRINT = credentials('oci-dev-api-key-fingerprint')
        // OCI_CLI_KEY_FILE = credentials('oci-dev-api-key-file')
    }

    stages {
        stage('Fetch Scan Report') {
            steps {
                sh """
                    echo "RPT_BRANCH_NAME = ${RPT_BRANCH_NAME}"
                    echo "PROJECT_NAME = ${upstream_project}/${RPT_BRANCH_NAME.replaceAll('/', '%2F')}"
                    echo "RPT_BUILD_NUMBER = ${RPT_BUILD_NUMBER}"
                    echo "upload_filename = ${upload_filename}"
                """
                copyArtifacts(
                    projectName: "${upstream_project}/${RPT_BRANCH_NAME.replaceAll('/', '%2F')}",
                    selector: specific("${RPT_BUILD_NUMBER}"),
                    filter: 'foobar.txt',
                    flatten: true,
                    optional: false,
                    fingerprintArtifacts: true,
                )
                sh """
                    echo "ls -l"
                    ls -l
                    cat ${upload_filename}
                """
            }
        }

        stage("Upload Scan Report") {
            steps {
                script{
                    sh """
                    echo curl -k -v -X POST -H "Content-Type: application/json" -d@${upload_filename} https://vzship-scanmanager.appoci.oraclecorp.com/scanreports
                    """
                }
            }
        }

    }

    post {
        cleanup {
            sh """
                rm -f ${upload_filename}
            """
        }
    }
}

