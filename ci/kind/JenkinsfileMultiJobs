def DOCKER_IMAGE_TAG

pipeline {
    options {
        skipDefaultCheckout true
    }

    agent {
       docker {
            label "VM.Standard2.8"
        }
    }

    parameters {
        string (name: 'VERRAZZANO_BRANCH',
                        defaultValue: 'develop',
                        description: 'Branch or tag or commit to clone and checkout, of the Verrazzano repo',
                        trim: true)
        booleanParam (description: 'Whether to dump k8s cluster on success (off by default can be useful to capture for comparing to failed cluster)', name: 'DUMP_K8S_CLUSTER_ON_SUCCESS', defaultValue: false)
    }

    environment {
    }

    stages {
        stage('Trigger Acceptance Tests') {
            matrix {
                axes {
                    axis {
                        name 'KUBERNETES_CLUSTER_VERSION'
                        values '1.17', '1.18', '1.19', '1.20'
                    }
                }
                stages {
                    stage('Trigger Jobs') {
                        sh """
                            echo "Kubernetes Version ${KUBERNETES_CLUSTER_VERSION}"
                        """
                        script {
                            build job: 'verrazzano-new-kind-acceptance-tests',
                                parameters: [
                                    string(name: 'VERRAZZANO_BRANCH', value: params.VERRAZZANO_BRANCH),
                                    string(name: 'KUBERNETES_CLUSTER_VERSION', value: ${KUBERNETES_CLUSTER_VERSION})
                                ], wait: false
                        }
                    }
                }
            }
        }
    }
}
