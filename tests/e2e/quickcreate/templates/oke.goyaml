apiVersion: clusters.verrazzano.io/v1alpha1
kind: OKEQuickCreate
metadata:
    name: {{.CLUSTER_ID}}
    namespace: default
spec:
    identityRef:
        name: test
        namespace: default
    kubernetes:
        version: {{.OKE_VERSION}}
    oke:
        compartment: {{.OCI_COMPARTMENT_ID}}
        region: {{.OCI_REGION}}
        imageId: {{.OKE_IMAGE_ID}}
        sshPublicKey: {{.CAPI_NODE_SSH_KEY_PATH}}
        network:
            cniType: {{.CNI_TYPE}}
            config:
                createVCN: true
        nodePools:
            - name: {{.CLUSTER_ID}}-1
              ocpus: 2
              memoryGbs: 16
              bootVolumeGbs: 50
              replicas: 1
              shape: VM.Standard.E4.Flex
