pipeline {
    agent any

    parameters {
        booleanParam (description: 'Whether to keep the build forever', name: 'KEEP_BUILD', defaultValue: false)
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }

    post {
        success {
            script {
                if ("${KEEP_BUILD}" == "true") {
                    currentBuild.setKeepLog(true)
                }
            }
        }
    }
}